    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>TOL.Filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>GBK</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>TOL.Filter.LoginFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>GBK</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-name>ShowMyGoods</servlet-name>
        <url-pattern>/addInfo.jsp</url-pattern>
        <url-pattern>/releaseGoods.jsp</url-pattern>
    </filter-mapping>
